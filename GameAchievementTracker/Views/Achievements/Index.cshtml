@model IEnumerable<GameAchievementTracker.Models.Achievement>

@{
    ViewData["Title"] = "Achievements";
    var earnedIds = ViewData["EarnedIds"] as List<int> ?? new List<int>();
}

<h1>Your Achievements</h1>

@if (!Model.Any())
{
    <p>You haven’t unlocked any achievements yet.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Game</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var achievement in Model)
        {
            <tr>
                <td>@achievement.Title</td>
                <td>@achievement.Description</td>
                <td>@achievement.Game?.Title</td>
                <td>
                    @if (earnedIds.Contains(achievement.Id))
                    {
                        <span class="text-success">✅ Earned</span>
                    }
                    else
                    {
                        <span class="text-muted">Not earned</span>
                    }
                </td>
                <td>
                    @if (!earnedIds.Contains(achievement.Id))
                    {
                        <form method="post" asp-action="Earn" asp-route-id="@achievement.Id">
                            <button type="submit">Mark as Earned</button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}