@model IEnumerable<GameAchievementTracker.Models.UserAchievement>

@{
    ViewData["Title"] = "Your Achievements";
}

<h1>Your Achievements</h1>

@if (!Model.Any())
{
    <p>You havenâ€™t unlocked any achievements yet.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Game</th>
            <th>Date Earned</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ua in Model)
        {
            <tr>
                <td>@ua.Achievement.Title</td>
                <td>@ua.Achievement.Description</td>
                <td>@ua.Achievement.Game?.Title</td>
                <td>@ua.DateEarned.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@ua.Achievement.Id">View</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}