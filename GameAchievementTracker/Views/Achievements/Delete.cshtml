@model GameAchievementTracker.Models.Achievement

@{
    ViewData["Title"] = "Delete Achievement";
}

<h2 class="text-danger">Delete Achievement</h2>

<h4>Are you sure you want to delete this achievement?</h4>
<div class="mb-3">
    <strong>Title:</strong> @Model.Title<br />
    <strong>Description:</strong> @Model.Description
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="GameId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-controller="Games" asp-route-id="@Model.GameId" class="btn btn-secondary">Cancel</a>
</form>